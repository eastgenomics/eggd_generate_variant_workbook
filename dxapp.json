{
  "name": "vcf2xls_nirvana_v1.0.0",
  "title": "vcf2xls_nirvana_v1.0.0",
  "summary": "vcf2xls_nirvana adapated for DNAnexus: no queries for Genetics Ark, uses Python STDOUT to remplace essential queries for creating QC sheets",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "inputSpec": [
    {
      "name": "list_panels_genes",
      "label": "List of comma-separated panels or comma-separated genes (prefixed with \"_\")",
      "class": "string",
      "optional": true,
      "help": ""
    },
    {
      "name": "annotated_vcfs",
      "label": "Nirvana annotated vcf(s)",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.annotated.vcf"
      ],
      "help": ""
    },
    {
      "name": "raw_vcfs",
      "label": "Raw vcf(s) before annotation",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.vcf"
      ],
      "help": ""
    },
    {
      "name": "runfolder_coverage_file",
      "label": "Runfolder coverage file generated by expected_depth_for_run.py",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.gz"
      ],
      "help": ""
    },
    {
      "name": "runfolder_coverage_index",
      "label": "Index for runfolder coverage file generated by expected_depth_for_run.py",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.gz.tbi"
      ],
      "help": ""
    },
    {
      "name": "coverage_files",
      "label": "Coverage file(s) generated by region_coverage.py",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.gz"
      ],
      "help": ""
    },
    {
      "name": "coverage_indexes",
      "label": "Index(es) for coverage file generated by region_coverage.py",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.gz.tbi"
      ],
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "xls_reports",
      "label": "xls reports for the samples",
      "class": "array:file",
      "patterns": [
        "*.xls"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 4
      }
    },
    "execDepends": [
      {
        "name": "pysam",
       "package_manager": "pip",
       "version": "0.12.0"
      }
    ],
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/vcf2xls_nirvana.sh"
  },
  "access": {
    "project": "CONTRIBUTE",
    "allProjects": "VIEW",
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:eu-central-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x2"
        }
      }
    }
  }
}
